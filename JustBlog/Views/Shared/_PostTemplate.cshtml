@model JustBlog.Core.Objects.Post

<div class="post">
    <div class="post-meta">
        <div class="row">

            <!-- Heading -->
            <div class="post-title">
                <h2>@Html.PostLink(Model)</h2>
            </div>
        </div>

        <div class="row">

            <!-- Category -->
            <div class="post-category">
                <span>Category : &nbsp;</span>@Html.CategoryLink(Model.Category)
            </div>

            <!-- Tag -->
            <div class="post-tag">
                <span>Tags : </span>@Helpers.Tags(html, Model.Tags)
            </div>

            <!-- Posted Date-->
            <div class="posted-date">
                @Model.PostedOn
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
